.bg-img{
    width: 100%;
    height: 100vh;
    /* background-color: rgba(0,0,0,0.2); */
    background-repeat: no-repeat;
    background-size: cover;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}
.container-wrapper{
    font-size: 32rpx;
    color: #fff;
}

.user-info{
    width: 100%;
    height: 140rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 30rpx;
    /* margin-top: 40rpx; */
    font-size: 36rpx;
    transition: all 300ms ease;
}
.avatar-img{
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}
.container{
	width:400rpx;
	margin: 0 auto;
	/* background-color: gray;   */
	text-align: center;
}
/* 天气信息 */
.weather-message{
    font-size: 40rpx;
}
.address-info{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 40rpx;
}
.address-icon{
    width: 28rpx;
    height: 28rpx;
}
.temperatrue-info{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 40rpx;
}
.temp-num{
    font-size: 100rpx;
}
.weather-status{
	display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 40rpx;
    font-size: 40rpx;

}
.status-icon{
	width: 60rpx;
    height: 60rpx;

}
.weather-desc{
	display: flex;
	justify-content: space-between;
    align-items: center;
    padding-bottom: 40rpx;
}
.weather-left{
    border-right: 1px solid #fff;
    padding-right: 40rpx;
}
.desc-detail{
	display: block;
}
.update-time {
    text-align: right;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
}
.three-hours-container{
    background-color: rgba(0,0,0,0.4);
    text-align: center;
}
.three-hours-title,
.three-days-title,
.life-title{
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ccc;

}
.hours-list{
    /* padding: 20rpx 0; */
    padding-top: 20rpx;
    height: 400rpx;
}
.hours-swiper-item{
    display: flex;
    justify-content: space-around;
    /* padding: 0 20rpx; */
}
.hours-item > view{
   margin-bottom: 20rpx;

}
.thress-days-contanier,
.life-number-container{
    background-color: rgba(0,0,0,0.4);
    text-align: center;
    margin-top: 30rpx;
}
.days-content{
    padding-top: 20rpx;
    /* height: 500rpx; */
    display: flex;
    justify-content: space-around;
    
}
.days-item > view{
    margin-bottom: 20rpx;
}
.life-container{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-top: 20rpx;
}
.life-right{
    font-size: 28rpx;
    text-align: left;
    padding-left: 10rpx;
}
.life-right > view{
    margin-bottom: 10rpx;
}
.life-number-container{
    border-bottom: 1rpx solid #ccc;
    padding: 0 10rpx;
}
.copy-right{
    display: flex;
    width: 100%;
    justify-content: center;
    font-size: 20rpx;
    padding: 20rpx 0;
    border-top: 1rpx solid #ccc;
    background-color: rgba(0, 0, 0, .4);

}